{
  "compilerOptions": {
    /* Dossiers */
    "rootDir": "./src",
    "outDir": "./dist",

    /* Environnement Node avec ES Modules */
    "module": "ESNext",
    "moduleResolution": "node",
    "target": "ES2020",
    "lib": ["ES2020"],

    /* Compatibilité ES modules */
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,

    /* Outils */
    "sourceMap": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,

    /* Émission */
    "declaration": false,
    "noEmitOnError": false
  },
  "include": ["src/**/*", "generated/**/*"],
  "exclude": ["node_modules", "dist"]
}
